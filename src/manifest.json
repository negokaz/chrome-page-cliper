{
  "manifest_version": 2,
  "name": "Page Cliper",
  "description": "選択領域をシングルページのHTMLとして保存します",
  "version": "0.2.0",
  "permissions": [
    "clipboardRead",
    "contextMenus",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "icon/icon_16.png",
    "32": "icon/icon_32.png",
    "48": "icon/icon_48.png",
    "128": "icon/icon_128.png"
  },
  "background": {
    "scripts": [
      "bower_components/jquery/dist/jquery.js",
      "js/background.js"
    ]
  }
}